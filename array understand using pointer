# cpp

selflearned program 





#include<bits/stdc++.h>
using namespace std;

int main(){

	int a[10];
	a[0] = 2;
	a[1] = 4;
	cout << "a : " << a << endl;
	cout << "&a[0] : " << &a[0] << endl;
	cout << "*a : " << *a << endl;//in array a[10] --> a work like  pointer
	cout << "a+1 : " << a+1 << endl;
	cout << "&a[1] : " << &a[1] << endl;
	cout << "*(a+1) : " << *(a+1) << endl;

}

